{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Launch Program",
        "program": "${workspaceFolder}/build/index.js",
        "request": "launch",
        "skipFiles": [
          "<node_internals>/**"
        ],
        "type": "pwa-node"
      },
      {
        "type": "node",
        "request": "attach",
        "name": "Attach",
        "restart": true,
        "processId": "${command:PickProcess}",
        "stopOnEntry": false,
      },
    ]
  }